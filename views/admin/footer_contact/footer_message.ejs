<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
            rel="stylesheet"
        />

        <title>Admin footer</title>
    </head>

    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Add footer</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form
                        id="footer-insert-form"
                        action="/admin/footer_contact/message"
                        method="POST"
                    >
                        <div class="form-group">
                            <label for="allEmails_footer">Emails</label>
                            <!-- <div id="editor"></div> -->
                            <textarea
                                name="allEmails_footer"
                                id="allEmails_footer"
                                cols="30"
                                rows="10"
                            >
								<% for( let index = 0; index < footer_contactArry.length; index++ ) { %>
									<%= footer_contactArry[index].email_footer %>,
								<% } %>
						</textarea
                            >
                        </div>
                        <div class="form-group">
                            <label for="message_footer">Message</label>
                            <!-- <div id="editor"></div> -->
                            <textarea
                                name="message_footer"
                                id="message_footer"
                                cols="30"
                                rows="10"
                            ></textarea>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script>
            var quill = new Quill("#editor", {
                theme: "snow",
            });

            const footerInsertForm = document.querySelector(
                "#footer-insert-form"
            );

            footerInsertForm.addEventListener("submit", async (e) => {
                e.preventDefault();
                const title_footer = e.target[0].value;
                const batch_footer = e.target[1].value;
                const paragraph_footer =
                    document.querySelector("#editor .ql-editor").innerHTML;
                await fetch("/admin/footer/insert", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        title_footer,
                        batch_footer,
                        paragraph_footer,
                    }),
                });
            });
        </script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
            integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
            integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
            crossorigin="anonymous"
        ></script>
    </body>
</html>

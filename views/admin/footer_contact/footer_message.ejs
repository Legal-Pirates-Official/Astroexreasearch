<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link rel="stylesheet" href="../../stylesheets/footer.css" />
		<link
			href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
			rel="stylesheet"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
			crossorigin="anonymous"
		/>
		<link
			rel="shortcut icon"
			href="../../images/favicon.ico"
			type="image/x-icon"
		/>
		<link rel="stylesheet" href="../../stylesheets/admin-panel.css" />

		<title>Footer</title>
	</head>
	<%- include("../../partials/footer_contact.ejs") %>

	<body>
		<%- include("../../partials/admin_nav.ejs") %>

		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Add Footer</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<form
						id="footer-insert-form"
						action="/admin/footer_contact/message"
						method="POST"
					>
						<div class="form-group">
							<label for="message_footer">Message</label>
							<div id="editor"></div>
						</div>
						<div>
							<button
								type="submit"
								class="btn btn-primary"
								style="margin-top: 1rem"
							>
								Submit
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
        <%- include("../../partials/admin_footer.ejs") %>

		<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
		<script>
			var quill = new Quill('#editor', {
				theme: 'snow'
			});

			const footerInsertForm = document.querySelector('#footer-insert-form');

			footerInsertForm.addEventListener('submit', async (e) => {
				e.preventDefault();
				const subscribemessage =
					document.querySelector('#editor .ql-editor').innerHTML;
				await fetch('/admin/footer_contact/message', {
					method: 'POST',
					headers: {
						'Content-Type': 'application/json'
					},
					body: JSON.stringify({
						subscribemessage
					})
				});
			});
		</script>

		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
			integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
			crossorigin="anonymous"
		></script>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
			integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
			crossorigin="anonymous"
		></script>
	</body>
</html>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <title>Footer Contact</title>
    </head>
    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="row">
                    <h1>Footer Show</h1>
                </div>
                <div class="row">
                    <a
                        class="btn btn-primary"
                        style="margin: 2% 0%; width: 10%"
                        href="/admin/footer_contact/message"
                        >Add footer</a
                    >
                </div>
            </div>
            <div class="row">
                <div class="row">
                    <table class="table table-striped table-dark table-hover">
                        <thead>
                            <tr>
                                <th class="col-name">Emails</th>
                                <th class="col-name">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% footer_contactArry.forEach(footer_contact => { %>
                            <tr>
                                <td><%- footer_contact.email_footer %></td>
                                <td>
                                    <a
                                        href="/admin/footer/<%- footer_contact.id_footer %>"
                                        class="btn btn-primary"
                                        style="margin-bottom: 10%"
                                        >View</a
                                    >
                                    <a
                                        href="/admin/footer/update/<%- footer_contact.id_footer %>"
                                        class="btn btn-warning"
                                        style="margin-bottom: 10%"
                                        >Edit</a
                                    >
                                    <a
                                        href="/admin/footer/delete/<%- footer_contact.id_footer %>"
                                        class="btn btn-danger"
                                        style="margin-bottom: 10%"
                                        >Delete</a
                                    >
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>

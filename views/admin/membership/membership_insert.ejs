<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/membership.css" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="../../stylesheets/admin-show.css" />
        <title>Membership</title>
    </head>
    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <section class="membership-section">
            <form action="">
                <div class="membership-main-div">
                    <h1>Membership</h1>
                    <textarea
                        name="membership_textarea"
                        id="membership_textarea"
                    ></textarea>
                </div>
                <div class="form-group">
                    <div class="plus-container">
                        <label for="description_internship">Add Tag</label>
                        <div class="plus-icon">
                            <p class="plusIcon">
                                <img
                                    src="https://img.icons8.com/ios-filled/50/000000/add--v1.png"
                                />
                            </p>
                        </div>
                    </div>
                    <label for="tag_membership_1">Tag Lines</label>
                    <input
                        required
                        class="form-control"
                        id="tag_membership_1"
                        name="tag_membership_1"
                        rows="3"
                    />
                </div>
                <div class="membership-table-top">
                    <table>
                        <tr>
                            <th>Membership</th>
                            <th>Golden Membership</th>
                            <th>Silver Membership</th>
                            <th>Bronze Membership</th>
                            <th>Institutional Membership</th>
                        </tr>
                        <tr class="form-group-container">
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_1"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_1"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_1"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_1"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_1"
                                />
                            </td>
                        </tr>
                        <tr>
                            <td>REST OF INDIA (USD)</td>
                            <td>4000/-</td>
                            <td>2000/-</td>
                            <td>1000/-</td>
                            <td>5000/-</td>
                        </tr>
                    </table>
                </div>

                <div class="membership-table-next">
                    <table>
                        <tr>
                            <th rowspan="2">Benefits</th>
                            <th colspan="2">Student Membership</th>
                            <th colspan="2">1234</th>
                        </tr>
                        <tr>
                            <th>1 Year</th>
                            <th>Life time</th>
                            <th>Bronze Membership</th>
                            <th>Institutional Membership</th>
                        </tr>
                        <tr>
                            <td>Article Submission</td>
                            <td>Y</td>
                            <td>Y</td>
                            <td>Y</td>
                            <td>Y</td>
                        </tr>
                        <tr>
                            <td>To Review Article</td>
                            <td>Y</td>
                            <td>Y</td>
                            <td>Y</td>
                            <td>Y</td>
                        </tr>
                    </table>
                </div>
                <div class="membership-button">
                    <a href="/becomeamember">Become a member</a>
                </div>
            </form>
        </section>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>

        <script>
            const plusIcon = document.querySelector(".plusIcon");
            const formGroupContainer = document.querySelector(
                ".form-group-container"
            );
            let count = 1;

            plusIcon.addEventListener("click", () => {
                formGroupContainer.insertAdjacentHTML(
                    "beforeend",
                    `<br><div class="form-group">
                        <br>
                        <tr>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_${count + 1}"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_${count + 1}"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_${count + 1}"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_${count + 1}"
                                />
                            </td>
                            <td>
                                <input
                                    type="text"
                                    name="tag_input_membership_${count + 1}"
                                />
                            </td>
                            <br>
                        </tr>
                    </div>`
                );
                count++;
            });
        </script>
    </body>
</html>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="../../stylesheets/admin-show.css" />
        <title>Admin internship Show</title>
    </head>

    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="row">
                    <h1>internship Show</h1>
                </div>
                <div class="row">
                    <a
                        class="btn btn-primary"
                        style="margin: 2% 0%; width: 10%"
                        href="/admin/internship/insert"
                        >Add internship</a
                    >
                </div>
            </div>
            <div class="row">
                <div class="row">
                    <table class="table table-striped table-dark table-hover">
                        <thead>
                            <tr>
                                <th class="col-name">Title</th>
                                <th class="col-name">Sub Heading</th>
                                <th class="col-name">Description</th>
                                <th class="col-name">tag Line</th>
                                <th class="col-name">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% internshipArray.forEach(internship => { %>
                            <tr>
                                <td><%- internship.heading_internship %></td>
                                <td><%- internship.subheading_internship %></td>
                                <td>
                                    <%- internship.description_internship %>
                                </td>
                                <!-- <td><%- internship.tag_internship %></td> -->
                                <td>
                                    <ul>
                                        <%
                                        internship.tag_internship.split(",").forEach((element,
                                        index) => { %>
                                        <li><%= element.split("=")[1] %></li>
                                        <% }); %>
                                    </ul>
                                </td>
                                <td>
                                    <a
                                        href="/admin/internship/<%- internship.id_internship %>"
                                        class="btn btn-primary"
                                        style="margin-bottom: 10%"
                                        >View</a
                                    >
                                    <a
                                        href="/admin/internship/update/<%- internship.id_internship %>"
                                        class="btn btn-warning"
                                        style="margin-bottom: 10%"
                                        >Edit</a
                                    >
                                    <a
                                        href="/admin/internship/delete/<%- internship.id_internship %>"
                                        class="btn btn-danger"
                                        style="margin-bottom: 10%"
                                        >Delete</a
                                    >
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.quilljs.com/1.3.6/quill.snow.css"
            rel="stylesheet"
        />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
            rel="shortcut icon"
            href="../../images/favicon.ico"
            type="image/x-icon"
        />
        <link rel="stylesheet" href="../../stylesheets/admin-panel.css" />
        <title>Add Services</title>
    </head>

    <%- include("../../partials/services.ejs") %>
    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Add Services</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form
                        action="/admin/services/insert"
                        id="services_form"
                        method="POST"
                    >
                        <div class="form-group">
                            <label for="name_services_label">Name</label>
                            <input
                                type="text"
                                class="form-control"
                                id="name_services"
                                name="name_services"
                            />
                        </div>
                        <div class="form-group">
                            <label for="textarea_services">Paragraph</label>
                            <textarea
                                required
                                class="form-control"
                                id="textarea_services"
                                name="textarea_services"
                            ></textarea>
                        </div>
                        <div class="form-group">
							<label for="paragraph_training">Description</label>
							<!-- <input
                                required
                                type="text"
                                class="form-control"
                                id="paragraph_training"
                                name="paragraph_training"
                            /> -->
							<!-- <textarea
								required
								class="form-control summer"
								id="summernote"
								name="paragraph_training"
								rows="3"
							></textarea> -->
							<div id="editor"></div>
						</div>
                        <div>
                            <button
                                type="submit"
                                class="btn btn-primary"
                                style="margin-top: 1rem"
                            >
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include("../../partials/admin_footer.ejs") %>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>

		<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script>
            var quill = new Quill("#editor", {
                theme: "snow",
            });

            const services_form = document.querySelector("#services_form");

            services_form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const name_services = e.target[0].value;
                const textarea_services = e.target[1].value;
                const price_services =
                    document.querySelector("#editor .ql-editor").innerHTML;
                await fetch("/admin/services/insert", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        name_services,
                        textarea_services,
                        price_services,
                    }),
                }).then((res) => {
                    if (res.status === 200) {
                        window.location.href = "/admin/services";
                    }
                });
            });
        </script>
    </body>
</html>

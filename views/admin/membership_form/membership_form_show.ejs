<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
            rel="shortcut icon"
            href="../../images/favicon.ico"
            type="image/x-icon"
        />
        <link rel="stylesheet" href="../../stylesheets/admin-show.css" />
        <title>Membership Form</title>
    </head>
    <%#- include("../../partials/membership_form.ejs") %>

    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row" style="margin: 2% 0">
                <h1>Membership Form</h1>
            </div>
            <!-- <div class="row">
                <a
                    class="btn btn-primary insert-button"
                    href="/admin/membership_form/insert"
                    >Add Membership Form</a
                >
            </div> -->
        </div>
        <div class="row" style="margin: 0 5%">
            <table class="table table-striped table-dark table-hover">
                <thead>
                    <tr>
                        <th class="col-name">Name</th>
                        <th class="col-name mobile-view">Email</th>
                        <th class="col-name mobile-view">Comment</th>
                        <th class="col-name">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    <% membership_join.reverse().forEach(membership_form => { %>
                    <tr>
                        <td>
                            <span class="first-column"
                                ><%- membership_form.membership_join_name
                                %></span
                            >
                        </td>
                        <td class="mobile-view">
                            <%- membership_form.membership_join_email %>
                        </td>
                        <td class="mobile-view">
                            <%- membership_form.membership_join_comment //
                            .trim().slice(0, 50) %>
                        </td>
                        <td class="operations-icons">
                            <!-- <a
                                href="/admin/membership_form/<%#- membership_form.membership_join_id %>"
                                class="btn btn-primary"
                                style="margin-bottom: 10%"
                                >View</a
                            >
                            <a
                                href="/admin/membership_form/update/<%#- membership_form.membership_join_id %>"
                                class="btn btn-warning"
                                style="margin-bottom: 10%"
                                >Edit</a
                            > -->
                            <a
                                href="/admin/becomeamember/delete/<%- membership_form.membership_join_id %>"
                                class="btn btn-danger"
                                style="margin-bottom: 10%"
                                >Delete</a
                            >
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <%- include("../../partials/admin_footer.ejs") %>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>

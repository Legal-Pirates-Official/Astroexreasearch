<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
            rel="shortcut icon"
            href="../../../images/favicon.ico"
            type="image/x-icon"
        />
        <title>Training Update</title>
    </head>
    <%- include("../../partials/training.ejs") %>

    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Update Training</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form
                        action="/admin/training/update/<%= training.id_training %>"
                        method="POST"
                    >
                        <div class="form-group">
                            <label for="title_training">Title</label>
                            <input
                                type="text"
                                style="width: 50%"
                                class="form-control mb-3"
                                id="title_training"
                                name="title_training"
                                value="<%= training.title_training %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="batch_training">Batch</label>
                            <input
                                type="text"
                                style="width: 50%"
                                class="form-control mb-3"
                                id="batch_training"
                                name="batch_training"
                                value="<%- training.batch_training %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="paragraph_training">Description</label>
                            <input
                                type="text"
                                style="width: 50%"
                                class="form-control mb-3"
                                id="paragraph_training"
                                name="paragraph_training"
                                value="<%- training.paragraph_training %>"
                            />
                        </div>
                        <div>
                            <button
                                type="submit"
                                class="btn btn-primary"
                                style="margin-top: 1rem"
                            >
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include("../../partials/admin_footer.ejs") %>
    </body>
</html>

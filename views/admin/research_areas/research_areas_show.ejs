<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link rel="stylesheet" href="../../stylesheets/admin-show.css" />
        <title>Research Areas Show</title>
    </head>

    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="row">
                    <h1>Research Areas Show</h1>
                </div>
                <div class="row">
                    <a
                        class="btn btn-primary"
                        style="margin: 2% 0%; width: 10%"
                        href="/admin/research_areas/insert"
                        >Add Research Areas</a
                    >
                </div>
            </div>
            <div class="row">
                <div class="row">
                    <table class="table table-striped table-dark table-hover">
                        <thead>
                            <tr>
                                <th class="col-name">Name</th>
                                <th class="col-name">Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% research_areasArray.forEach(research_areas => {
                            %>
                            <tr>
                                <td>
                                    <%- research_areas.text_research_areas %>
                                </td>

                                <td>
                                    <a
                                        href="/admin/research_areas/<%- research_areas.id_research_areas %>"
                                        class="btn btn-primary"
                                        style="margin-bottom: 10%"
                                        >View
                                    </a>
                                    <a
                                        href="/admin/research_areas/update/<%- research_areas.id_research_areas %>"
                                        class="btn btn-warning"
                                        style="margin-bottom: 10%"
                                        >Edit
                                    </a>
                                    <a
                                        href="/admin/research_areas/delete/<%- research_areas.id_research_areas %>"
                                        class="btn btn-danger"
                                        style="margin-bottom: 10%"
                                        >Delete
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>

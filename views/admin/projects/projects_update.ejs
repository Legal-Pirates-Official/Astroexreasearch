<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../../../stylesheets/admin-nav.css" />
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
            crossorigin="anonymous"
        />
        <link
            rel="shortcut icon"
            href="../../../images/favicon.ico"
            type="image/x-icon"
        />
        <link rel="stylesheet" href="../../../stylesheets/admin-panel.css" />
        <title>Projects Update</title>
    </head>
    <%- include("../../partials/projects.ejs") %>

    <body>
        <%- include("../../partials/admin_nav.ejs") %>

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Update Projects</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <form
                        action="/admin/projects/update/<%= projects.id_projects %>"
                        method="POST"
                        enctype="multipart/form-data"
                    >
                        <div class="form-group">
                            <label for="title_projects"
                                >Name of the projects</label
                            >
                            <input
                                type="text"
                                style="width: 50%"
                                class="form-control mb-3"
                                id="title_projects"
                                name="title_projects"
                                value="<%= projects.title_projects %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="description_projects"
                                >Description</label
                            >
                            <textarea
                                style="width: 50%; height: 100px"
                                class="form-control mb-3"
                                id="description_projects"
                                name="description_projects"
                            >
<%= projects.description_projects %></textarea
                            >
                        </div>
                        <div class="form-group">
                            <label for="image_projects">Image</label>
                            <input
                                type="file"
                                style="width: 50%"
                                class="form-control"
                                id="image_projects"
                                name="image_projects"
                            />
                            <input
                                checked
                                readonly
                                style="height: 0; width: 0"
                                type="checkbox"
                                name="image_checkbox"
                                id="image_checkbox"
                                value="<%- projects.image_projects %>"
                            />
                        </div>
                        <div>
                            <button
                                type="submit"
                                class="btn btn-primary"
                                style="margin-top: 1rem"
                            >
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
